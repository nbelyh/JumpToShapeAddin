<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

  <?define Binaries="$(var.SolutionDir)$(var.Platform)\$(var.Configuration)" ?>
  <?define Version="111.111.111"?>
  
  <?if $(var.Platform)=x64 ?>
  <?define Win64YesNo="yes" ?>
  <?define UpgradeCode = "{EF0283E2-C8FE-49d3-B02E-A9957C29C7E6}" ?>
  <?define cf="ProgramFiles64Folder" ?>
  <?else ?>
  <?define Win64YesNo="no" ?>
  <?define UpgradeCode = "{B9A5D0A7-F59F-4c82-A230-E77C8B523451}" ?>
  <?define cf="ProgramFilesFolder" ?>
  <?endif ?>
  
  <Product Id="*" 
           Name="Visio Developer Jump To Shape Addin $(var.Version) $(var.Platform)" 
           Language="1033" 
           Codepage="1252"
           Version="$(var.Version)" 
           Manufacturer="Unmanaged Visio" 
           UpgradeCode="$(var.UpgradeCode)">

    <Package InstallerVersion="200" 
             Compressed="yes" 
             InstallPrivileges="elevated" 
             InstallScope="perMachine" 
             Platform="$(var.Platform)"
             />

    <Property Id="MSIFASTINSTALL">1</Property>
    
    <Media Id="1" Cabinet="media1.cab" EmbedCab="yes" />

    <MajorUpgrade
      DowngradeErrorMessage="A later version of [ProductName] is already installed. Setup will now exit." />

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="$(var.cf)">
        <Directory Id="COMPANYDIR" Name="UnmanagedVisio" >
          <Directory Id="PRODUCTDIR" Name="JumpToShape">

            <Component Id="ProductComponent" Win64="$(var.Win64YesNo)">
              <File KeyPath="yes" Source="$(var.Binaries)\Addin.dll" >
                <TypeLib Id="{6299BB77-B361-4a55-90D3-DEC687F30CD7}" Description="Jup To Shape Addin 1.0 Type Library" HelpDirectory="TARGETDIR" Language="0" MajorVersion="1" MinorVersion="0">
                  <Class Id="{036C736A-06DA-4077-A0E2-5697ABF9DF40}" Context="InprocServer32" Description="Connect Class" ThreadingModel="apartment" Programmable="yes">
                    <ProgId Id="JumpToShapeAddin.Connect.1" Description="Connect Class">
                      <ProgId Id="JumpToShapeAddin.Connect" Description="Connect Class" />
                    </ProgId>
                  </Class>
                  <Interface Id="{AF31E0EB-48CF-4A3B-893F-E999A0E29944}" Name="ICallbackInterface" ProxyStubClassId32="{00020424-0000-0000-C000-000000000046}" />
                </TypeLib>
              </File>
            </Component>

            <Component Id="VisioRegistration" Win64="$(var.Win64YesNo)" >
              <RegistryKey Root="HKMU" Key="Software\Microsoft\Visio\Addins\JumpToShapeAddin.Connect">
                <RegistryValue Name="CommandLineSafe" Type="integer" Value="0" />
                <RegistryValue Name="FriendlyName" Type="string" Value="JumpToShapeAddin" KeyPath="yes" />
                <RegistryValue Name="LoadBehavior" Type="integer" Value="3" />
              </RegistryKey>
            </Component>

          </Directory>
        </Directory>
      </Directory>
    </Directory>
    
    <Feature Id="ProductFeature" Title="Jump To Shape Addin" Level="1">
      <ComponentRef Id="ProductComponent" />
      <ComponentRef Id="VisioRegistration" />
    </Feature>

    <UIRef Id="WixUI_ErrorProgressText" />

    <WixVariable Id="WixUIDialogBmp" Value="dlgbmp.bmp"/>
    <WixVariable Id="WixUIBannerBmp" Value="bannrbmp.bmp"/>

    <UI>
      <TextStyle Id="WixUI_Font_Normal" FaceName="Tahoma" Size="8" />
      <TextStyle Id="WixUI_Font_Bigger" FaceName="Tahoma" Size="12" Bold="yes" />
      <TextStyle Id="WixUI_Font_Title" FaceName="Tahoma" Size="9" Bold="yes" />

      <Property Id="DefaultUIFont" Value="WixUI_Font_Normal" />
      <Property Id="WixUI_Mode" Value="Minimal" />

      <DialogRef Id="ErrorDlg" />
      <DialogRef Id="FatalError" />
      <DialogRef Id="FilesInUse" />
      <DialogRef Id="MsiRMFilesInUse" />
      <DialogRef Id="PrepareDlg" />
      <DialogRef Id="ProgressDlg" />
      <DialogRef Id="ResumeDlg" />
      <DialogRef Id="UserExit" />
      <DialogRef Id="SimpleWelcomeEulaDlg" />

      <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="SimpleWelcomeEulaDlg">1</Publish>
      <Publish Dialog="SimpleWelcomeEulaDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg">1</Publish>

      <Publish Dialog="ExitDialog" Control="Finish" Event="EndDialog" Value="Return" Order="999">1</Publish>

      <Publish Dialog="VerifyReadyDlg" Control="Back" Event="NewDialog" Value="MaintenanceTypeDlg">1</Publish>

      <Publish Dialog="MaintenanceWelcomeDlg" Control="Next" Event="NewDialog" Value="MaintenanceTypeDlg">1</Publish>

      <Publish Dialog="MaintenanceTypeDlg" Control="RepairButton" Event="NewDialog" Value="VerifyReadyDlg">1</Publish>
      <Publish Dialog="MaintenanceTypeDlg" Control="RemoveButton" Event="NewDialog" Value="VerifyReadyDlg">1</Publish>
      <Publish Dialog="MaintenanceTypeDlg" Control="Back" Event="NewDialog" Value="MaintenanceWelcomeDlg">1</Publish>
    </UI>

    <UIRef Id="WixUI_Common" />

    <Icon Id="AddinIcon.ico" SourceFile="AddinIcon.ico" />

    <Property Id="ARPNOMODIFY" Value="1" />
    <Property Id="ARPPRODUCTICON" Value="AddinIcon.ico" />
    
  </Product>
</Wix>
